<Window x:Class="SP_12._04_ex4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process Tree" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TreeView Name="ProcessTreeView" SelectedItemChanged="ProcessTreeView_SelectedItemChanged" Margin="10"/>
        <TextBlock Name="ProcessInfoTextBlock" Grid.Column="1" Margin="10" TextWrapping="Wrap"/>
    </Grid>
</Window>